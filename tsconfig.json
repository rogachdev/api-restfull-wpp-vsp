{
	"compilerOptions": {
		"target": "ES6",
		"lib": ["ES6"],
		"module": "commonjs",
		"outDir": "build",
		"rootDir": "src",
		"allowJs": true,
		"strict": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"strictPropertyInitialization": false,
		"forceConsistentCasingInFileNames": true
	}
}
